class VoiceShop < Nadoka::NDK_Bot
  def bot_initialize
    @available_channel = @bot_config[:ch] || //
  end

  def on_join prefix, ch
    return unless @available_channel === ch

    if prefix.nick != @state.nick
      change_mode(ch, "+v", prefix.nick)
    end
  end
end


