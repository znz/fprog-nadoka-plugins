=begin

== Abstract

Say time.


== Configuration

  BotConfig << {
    :name => :TimeBot,
    :ch => /nadoka/,
  }

=end

require 'pathname'

class TimeBot < Nadoka::NDK_Bot
  def bot_initialize
    if @bot_config.key?(:ch)
      @available_channel = @bot_config[:ch]
    else
      @available_channel = //
    end
  end

  ZONEINFO = Pathname.new('/usr/share/zoneinfo')
  def zone_date(zone)
    zonepath = (ZONEINFO + zone).expand_path
    return unless /\A#{Regexp.quote(ZONEINFO)}\//o =~ zonepath
    zone = $'
    return unless zonepath.exist?
    `TZ='#{zone}' date`
  end

  def on_privmsg prefix, ch, msg
    return unless @available_channel === ch

    case NKF.nkf("-e", msg)
    when /^time> ([A-Za-z0-9+\-_\/]+)$/
      msg = zone_date($1)
      send_notice(ch, NKF.nkf('-Ej -m0', msg))
    end
  end
end
