=begin

== Abstract

Google Calc bot.

== Configuration

  BotConfig << {
    :name => :GoogleCalcBot,
    :bot_name => "google calc",
    :ch => //,
    :separator => /[\s<:>]/,
  }

=end

require 'cgi'
require 'nkf'
require 'open-uri'

class GoogleCalcBot < Nadoka::NDK_Bot
  def bot_initialize
    if @bot_config.key?(:channels)
      channels = '\A(?:' + @bot_config[:channels].collect{|ch|
        Regexp.quote(ch)
      }.join('|') + ')\z'
      @available_channel = Regexp.compile(channels)
    else
      @available_channel = @bot_config[:ch] || //
    end

    @bot_name = @bot_config[:bot_name] || 'google calc'
    @separator = @bot_config[:separator] || /[<:>]/
    @pattern = /^google calc\s*#{@separator}\s*(.+)/
  end

  def on_privmsg prefix, ch, msg
    return unless @available_channel === ch

    if @pattern =~ msg
      res = google_calc(NKF.nkf('-w', $1))
      send_notice(ch, "#{@bot_name}> #{res}")
    end
  end

  def google_calc exp
    uri = "http://www.google.co.jp/search?ie=UTF8&oe=UTF-8&q=#{CGI.escape(exp)}"
    html = open(uri) do |f|
      f.read
    end
    if /font size=\+1><b>([^<>]+)/u =~ html
      NKF.nkf('-j', $1)
    else
      "response error"
    end
  rescue Exception
    $!.to_s
  end
end
